<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Comparison View Styles -->
    <style name="ComparisonView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/comparison_row_bg</item>
    </style>

    <!-- Header Styles -->
    <style name="ComparisonHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/comparison_header_bg</item>
        <item name="android:textColor">@color/comparison_text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Cell Styles -->
    <style name="ComparisonCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/comparison_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ComparisonCell.Label">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/comparison_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ComparisonCell.Value">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ComparisonCell.Better">
        <item name="android:textColor">@color/better_value</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ComparisonCell.Worse">
        <item name="android:textColor">@color/worse_value</item>
    </style>

    <!-- Divider Style -->
    <style name="ComparisonDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/comparison_divider</item>
    </style>

    <!-- Section Header Style -->
    <style name="ComparisonSectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/comparison_text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/comparison_header_bg</item>
    </style>

    <!-- Vehicle Card Styles -->
    <style name="ComparisonVehicleCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Vehicle Name Style -->
    <style name="ComparisonVehicleName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/comparison_text_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Vehicle Price Style -->
    <style name="ComparisonVehiclePrice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/comparison_accent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- Action Button Style -->
    <style name="ComparisonActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Share Button Style -->
    <style name="ComparisonShareButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
